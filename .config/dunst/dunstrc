[global]
    # Define the font and its size
    font = "JetBrainsMono Nerd Font 10"

    # Define the transparency level (0-100)
    transparency = 10

    # Define the background color of notifications
    background = "#00000000"

    # Define the foreground (text) color of notifications
    foreground = "#f8f8f2"

    # Define the border color of notifications
    frame_color = "#bd93f9"

    # Define the width of the border
    frame_width = 1

    # Define the corner radius of notifications
    corner_radius = 8

    # Define the notification width
    width = 300

    # Define the notification height
    height = 50

    # Define the padding around the text
    padding = 8

    # Define the horizontal gap between notifications
    horizontal_padding = 10

    # Define the vertical gap between notifications
    vertical_padding = 10

    # Define the gap between notifications
    gap_size = 8

    # Define the notification icon size
    icon_size = 32

    # Define the icon position (left or right)
    icon_position = "left"

    # Define the notification timeout in seconds
    timeout = 5

    # Define the notification position (top-left, top-center, top-right, bottom-left, bottom-center, bottom-right)
    origin = top-right

    # Define the notification offset from the screen edge
    offset = 10x10

    # Define the notification format
    format = "<b>%s</b>\n%b"

    # Define the maximum number of notifications to show
    max_notifications = 5

    # Define the history file path
    history_file = "~/.cache/dunst/history"

    # Enable or disable mouse actions
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

    # Enable or disable blur (requires picom/compton with blur support)
    # This setting depends on your compositor. If you use picom, ensure it's configured for blur.
    # For example, in picom.conf:
    # blur: {
    #   method = "kawase";
    #   strength = 5;
    # };
    # blur-background = true;
    # blur-background-frame = true;
    # blur-kern = "3x3gaussian";
    # blur-method = "kawase";
    # blur-strength = 5;
    #
    # Dunst itself doesn't directly apply blur, it relies on the compositor.
    # The transparency setting above will work directly with Dunst.

[urgency_low]
    background = "#282a36"
    foreground = "#f8f8f2"
    frame_color = "#6272a4"
    timeout = 10

[urgency_normal]
    background = "#282a36"
    foreground = "#f8f8f2"
    frame_color = "#50fa7b"
    timeout = 10

[urgency_critical]
    background = "#ff5555"
    foreground = "#f8f8f2"
    frame_color = "#ff5555"
    timeout = 0
    # Play a sound for critical notifications
    # script = /usr/bin/canberra-gtk-play -i dialog-warning -d "dunst-critical"
